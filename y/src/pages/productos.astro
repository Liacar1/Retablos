         const precio = document.getElementById('productoPrecio') as HTMLElement;
         const whatsapp = document.getElementById('productoWhatsApp') as HTMLAnchorElement;
         const foto1 = document.getElementById('foto1') as HTMLImageElement;
         const foto2 = document.getElementById('foto2') as HTMLImageElement;
         
         if (modal && titulo && descripcion && materiales && tamaño && entrega && precio && whatsapp && foto1 && foto2) {
           titulo.textContent = producto.titulo;
           descripcion.textContent = producto.descripcion;
           materiales.textContent = producto.materiales;
           tamaño.textContent = producto.tamaño;
           entrega.textContent = producto.entrega;
           precio.textContent = producto.precio;
           whatsapp.href = producto.whatsapp;
           foto1.src = producto.fotos[0];
           
           // Mostrar segunda foto
           foto2.src = producto.fotos[1];
           foto2.style.display = 'block';
           
           // Guardar la posición actual del scroll
           const scrollY = window.scrollY;
           
           modal.classList.remove('hidden');
           document.body.style.overflow = 'hidden';
           
           // Posicionar el modal en la posición actual del scroll
           modal.style.top = scrollY + 'px';
         }
       };

             (window as any).cerrarProducto = function() {
         const modal = document.getElementById('productoModal') as HTMLElement;
         if (modal) {
           modal.classList.add('hidden');
           document.body.style.overflow = 'auto';
           // Restaurar la posición del modal
           modal.style.top = '';
         }
       };

      // Cerrar modal al hacer clic fuera
      document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('productoModal');
        if (modal) {
          modal.addEventListener('click', function(e) {
            if (e.target === this) {
              (window as any).cerrarProducto();
            }
          });
        }
      });

      // Cerrar modal con Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          (window as any).cerrarProducto();
        }
